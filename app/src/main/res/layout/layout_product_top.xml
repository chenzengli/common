<?xml version="1.0" encoding="utf-8"?>
<com.mc.common.view.pulluploadmore.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner_product"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white_dd"
            app:banner_default_image="@drawable/ic_default_pic"
            app:image_scale_type="fit_xy">

        </com.youth.banner.Banner>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/interval_10dp">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="2"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size_14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_name"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/price_range"
                    android:textColor="@color/red_d71827"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tv_isFreePd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tv_product_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/text_size_12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <!--服务支持-->
        <TextView
            android:id="@+id/tv_service_support"
            style="@style/text_right"
            android:drawableRight="@drawable/ic_chevron_right_black_333"
            android:text="@string/service_support" />

        <TextView
            android:id="@+id/tv_freight_detail"
            style="@style/text_right"
            android:drawableRight="@drawable/ic_chevron_right_black_333"
            android:text="@string/postage_introduction" />

        <!--领取优惠券-->
        <TextView
            android:id="@+id/tv_receive_coupons"
            style="@style/text_right"
            android:drawableRight="@drawable/ic_chevron_right_black_333"
            android:text="@string/receive_coupons" />
        <!--购买可得积分-->
        <TextView
            android:id="@+id/tv_get_points"
            style="@style/text_right"
            android:drawableRight="@drawable/ic_chevron_right_black_333"
            android:text="@string/get_points" />

        <!--评论-->
        <TextView
            android:id="@+id/tv_product_evaluate"
            style="@style/text_right"
            android:drawableRight="@drawable/ic_chevron_right_black_333" />
        <!--属性-->
        <TextView
            android:id="@+id/tv_product_properties"
            style="@style/text_right"
            android:drawableRight="@drawable/ic_chevron_right_black_333"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_margin"
        android:paddingTop="@dimen/item_margin">


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#e0e0e0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/interval_5dp"
            android:paddingRight="@dimen/interval_5dp"
            android:text="@string/view_text_details" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#e0e0e0" />

    </LinearLayout>

</com.mc.common.view.pulluploadmore.MyScrollView>