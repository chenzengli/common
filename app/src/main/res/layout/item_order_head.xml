<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_dd"
    android:orientation="horizontal"
    android:padding="@dimen/interval_10dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_product"
        android:drawablePadding="@dimen/interval_6dp"
        android:drawableStart="@drawable/ic_product"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="220dp"
        android:singleLine="true"
        android:textColor="@color/black_333"
        android:textSize="@dimen/text_size_14sp" />

    <TextView
        android:id="@+id/tv_order_limit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:paddingLeft="@dimen/interval_5dp"
        android:paddingRight="@dimen/interval_5dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/text_size_12sp" />

    <!--<android.support.v7.widget.AppCompatImageView-->
