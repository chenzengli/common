<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_detail_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/interval_16dp"
            android:paddingRight="@dimen/interval_16dp"
            android:text="卖家已发货"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/rl_logistics_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/interval_10dp"
            android:paddingRight="@dimen/interval_10dp"
            android:paddingTop="@dimen/interval_6dp">

            <ImageView
                android:id="@+id/iv_logistics_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_receiver_deliver" />

            <ImageView
                android:id="@+id/iv_logistics_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_chevron_right_black_333" />

            <TextView
                android:id="@+id/tv_logistics_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interval_6dp"
                android:layout_marginRight="@dimen/interval_6dp"
                android:layout_toLeftOf="@id/iv_logistics_more"
                android:layout_toRightOf="@id/iv_logistics_view"
                android:ellipsize="end"
                android:lines="3"
                android:text="[已签收]，签收人凭取货码签收。感谢使用安徽省合肥市瑶海区新蚌埠路蓝光时代红街5号楼1号柜【自提柜】，期待再次为您服务。"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_logistics_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_logistics_msg"
                android:layout_below="@id/tv_logistics_msg"
                android:layout_marginTop="@dimen/interval_6dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="2017-12-08 08:18:17"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_0.5dp"
                android:layout_below="@id/tv_logistics_time"
                android:layout_marginTop="@dimen/interval_6dp"
                android:background="@color/white_dd" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/interval_10dp"
            android:paddingRight="@dimen/interval_10dp"
            android:paddingTop="@dimen/interval_6dp">

            <ImageView
                android:id="@+id/iv_receiver_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_receiver_address" />

            <TextView
                android:id="@+id/tv_receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interval_6dp"
                android:layout_marginRight="@dimen/interval_6dp"
                android:layout_toRightOf="@id/iv_receiver_view"
                android:ellipsize="end"
                android:lines="1"
                android:text="收货人：陈增立    86-17756027656"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_receiver_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_receiver_name"
                android:layout_below="@id/tv_receiver_name"
                android:layout_marginTop="@dimen/interval_6dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="安徽省合肥市瑶海区长淮街道北一环路和新蚌埠路交口附近蓝光时代红街4栋1804"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_0.5dp"
                android:layout_below="@id/tv_receiver_address"
                android:layout_marginTop="@dimen/interval_6dp"
                android:background="@color/white_dd" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval_6dp"
            android:background="@color/white_dd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/interval_6dp">

            <ImageView
                android:id="@+id/iv_shop_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_small_shop_icon" />

            <TextView
                android:id="@+id/tv_contract_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="联系商家"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interval_6dp"
                android:layout_marginRight="@dimen/interval_6dp"
                android:layout_toLeftOf="@id/tv_contract_shop"
                android:layout_toRightOf="@id/iv_shop_logo"
                android:ellipsize="end"
                android:lines="1"
                android:text="京东" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_0.5dp"
                android:layout_below="@id/tv_shop_name"
                android:layout_marginTop="@dimen/interval_6dp"
                android:background="@color/white_dd" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_order_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval_6dp"
            android:background="@color/white_dd" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="订单编号：234567892342（点击复制）" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="下单时间：2017-12-08 16:60:36" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_0.5dp"
            android:background="@color/white_dd" />

        <TextView
            android:id="@+id/tv_pay_way"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="支付方式：快捷支付" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_0.5dp"
            android:background="@color/white_dd" />

        <TextView
            android:id="@+id/tv_express_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="配送方式：普通快递" />

        <TextView
            android:id="@+id/tv_express_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="快递单号：234566654（点击复制）" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_0.5dp"
            android:background="@color/white_dd" />

        <TextView
            android:id="@+id/tv_invoice_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="发票类型：电子普通发票" />

        <TextView
            android:id="@+id/tv_invoice_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="发票抬头：个人" />

        <TextView
            android:id="@+id/tv_invoice_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="发票内容：商品明细" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval_6dp"
            android:background="@color/white_dd" />

        <TextView
            android:id="@+id/tv_good_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="商品总额：¥1799.00" />

        <TextView
            android:id="@+id/tv_express_fee"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="运费：¥6.00" />

        <TextView
            android:id="@+id/tv_discount_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="折扣：¥0.00" />

        <TextView
            android:id="@+id/tv_coupon_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="优惠券：¥0.00" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_0.5dp"
            android:background="@color/white_dd" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="总金额：¥1805.00"
            android:textColor="@color/red_d71827"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:id="@+id/rl_guess_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_dd">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_guess_like"
                android:drawablePadding="@dimen/interval_10dp"
                android:padding="@dimen/dp_10"
                android:text="猜你喜欢" />
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_guess_like"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
