<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/interval_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_amount"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/red_d71827"
                android:textSize="@dimen/text_size_16sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/interval_10dp"
            android:text="@string/pay_type"
            android:textColor="@color/black_333"
            android:textSize="@dimen/text_size_14sp" />

        <RadioGroup
            android:id="@+id/group_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/interval_10dp">

            <RadioButton
                android:id="@+id/rb_ali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_6dp"
                android:layout_marginTop="@dimen/interval_6dp"
                android:button="@color/transparent"
                android:drawableLeft="@drawable/ic_alipay"
                android:drawablePadding="@dimen/interval_10dp"
                android:drawableRight="@drawable/rb_invoice_selector"
                android:text="@string/alipay"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size_14sp" />

            <RadioButton
                android:id="@+id/rb_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_6dp"
                android:layout_marginTop="@dimen/interval_6dp"
                android:button="@color/transparent"
                android:drawableLeft="@drawable/ic_weichat"
                android:drawablePadding="@dimen/interval_10dp"
                android:drawableRight="@drawable/rb_invoice_selector"
                android:text="@string/wechat_pay"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size_14sp" />

            <RadioButton
                android:id="@+id/rb_union"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_6dp"
                android:layout_marginTop="@dimen/interval_6dp"
                android:button="@color/transparent"
                android:drawableLeft="@drawable/ic_unionpay"
                android:drawablePadding="@dimen/interval_10dp"
                android:drawableRight="@drawable/rb_invoice_selector"
                android:text="@string/unionpay"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size_14sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="@dimen/interval_10dp"
            android:layout_marginTop="@dimen/interval_30dp"
            android:background="@drawable/bg_login"
            android:text="@string/pay_immediately"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
