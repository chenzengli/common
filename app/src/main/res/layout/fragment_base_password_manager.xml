<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/bg_user_divider"
    android:orientation="vertical"
    android:padding="@dimen/interval_16dp"
    android:showDividers="middle|end">

    <TextView
        android:id="@+id/tv_manager_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_chevron_right_black_333"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_manager_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_chevron_right_black_333"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_manager_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_chevron_right_black_333"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
